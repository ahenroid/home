#!/bin/sh
# -*- mode: Shell-script;-*-

# build leatherman
if [[ -d ~/proj/leatherman  && ! -d ~/proj/leatherman/build ]]; then
    cd ~/proj/leatherman && mkdir build
    cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. && make && make install
    echo do something
fi

# build facter
if [[ -d ~/proj/facter  && ! -d ~/proj/facter/build ]]; then
    cd ~/proj/facter && mkdir build
    cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. && make
    echo do something
fi


